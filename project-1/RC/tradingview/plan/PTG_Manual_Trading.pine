//@version=6
indicator("PTG Manual Trading – For Real 10-100u Accounts", overlay=true, max_bars_back=200)

// ===== MANUAL TRADING INDICATOR FOR REAL SMALL CAPITAL =====
// Based on proven PTG_Test_10u logic (48.69% win rate, profit factor 1.03)

pairSelection = input.string("XAU/USD", "Trading Pair", options=["EUR/USD", "XAU/USD"])
isPairEURUSD = pairSelection == "EUR/USD"
isPairXAUUSD = pairSelection == "XAU/USD"

// Auto-optimization based on pair
pipSize = isPairEURUSD ? 0.0001 : 0.01
useEMA = input.bool(false, "Lọc trend EMA34/55 (OFF for more signals)")
useVWAP = input.bool(false, "Lọc trend VWAP (OFF for more signals)")
lookback = input.int(20, "So sánh trong N nến", minval=10)

// Proven parameters from PTG_Test_10u
pushRangePct = input.float(0.60, "Range ≥ 60% range lớn nhất N nến", step=0.05)
closePct = input.float(0.60, "Close nằm ở 60–100% cực trị", step=0.05)
oppWickPct = input.float(0.40, "Bóng ngược ≤ 40% range", step=0.05)
volHighMult = input.float(1.2, "Vol ≥ 1.2× SMA Vol", step=0.1)

testBars = input.int(5, "Cho phép TEST trong 1–5 nến", minval=1, maxval=10)
pullbackMax = input.float(0.50, "Pullback ≤ 50% range PUSH", step=0.02)
volLowMult = input.float(1.0, "Vol TEST ≤ 1.0× SMA Vol", step=0.05)

entryBufPip = input.float(0.01, "Đệm Entry (pip)", step=0.01)
slBufPip = input.float(0.01, "Đệm SL (pip)", step=0.01)
tpMultiplier = input.float(2.0, "TP multiplier", step=0.5, minval=1.0, maxval=5.0)

// Manual trading settings
showEntry = input.bool(true, "Show Entry Signals")
showSLTP = input.bool(true, "Show SL/TP Levels")
showAlerts = input.bool(true, "Enable Alerts")

// Account size for position sizing calculation
accountSize = input.float(10.0, "Account Size ($)", step=10.0, minval=10.0, maxval=10000.0)
riskPercent = input.float(2.0, "Risk per trade (%)", step=0.5, minval=0.5, maxval=10.0)

// ===== CORE LOGIC (PROVEN FROM PTG_TEST_10u) =====
ema34 = ta.ema(close, 34)
ema55 = ta.ema(close, 55)
vwap = ta.vwap

upOK = (not useEMA or ema34 > ema55) and (not useVWAP or close > vwap)
dnOK = (not useEMA or ema34 < ema55) and (not useVWAP or close < vwap)

rng = high - low
rngHi = ta.highest(rng, lookback)
volMA = ta.sma(volume, lookback)
rngMA = ta.sma(rng, lookback)

closePosHi = (close - low) / math.max(rng, 1e-6)
closePosLo = (high - close) / math.max(rng, 1e-6)
lowWick = (math.min(open, close) - low) / math.max(rng, 1e-6)
upWick = (high - math.max(open, close)) / math.max(rng, 1e-6)

bigRange = rng >= rngHi * pushRangePct
hiVol = volume >= volMA * volHighMult and volume > volume[1]

// Push detection
pushUp = upOK and bigRange and hiVol and closePosHi >= closePct and upWick <= oppWickPct
pushDn = dnOK and bigRange and hiVol and closePosLo >= closePct and lowWick <= oppWickPct

plotshape(pushUp, title="Push Up", style=shape.triangleup, location=location.belowbar,
     color=color.new(color.lime, 0), size=size.normal, text="PUSH↑", textcolor=color.black)
plotshape(pushDn, title="Push Down", style=shape.triangledown, location=location.abovebar,
     color=color.new(color.red, 0), size=size.normal, text="PUSH↓", textcolor=color.white)

var bool waitTest = false
var bool longDir = false
var int iPush = na
var float hiPush = na
var float loPush = na
var float rngPush = na

if (pushUp or pushDn)
    waitTest := true
    longDir := pushUp
    iPush := bar_index
    hiPush := high
    loPush := low
    rngPush := rng

win = waitTest and (bar_index - iPush) >= 1 and (bar_index - iPush) <= testBars

pullOKLong = win and longDir and (hiPush - low) <= pullbackMax * rngPush
pullOKShort = win and (not longDir) and (high - loPush) <= pullbackMax * rngPush
lowVol = volume <= volMA * volLowMult
smallRng = rng <= rngMA * 1.2

testLong = pullOKLong and lowVol and smallRng
testShort = pullOKShort and lowVol and smallRng

plotshape(testLong, title="Test Long", style=shape.circle, location=location.belowbar,
     color=color.new(color.lime, 0), size=size.normal, text="TEST", textcolor=color.black)
plotshape(testShort, title="Test Short", style=shape.circle, location=location.abovebar,
     color=color.new(color.red, 0), size=size.normal, text="TEST", textcolor=color.white)

var float testHi = na
var float testLo = na
if testLong
    testHi := high
    testLo := low
if testShort
    testHi := high
    testLo := low

useHi = na(testHi) ? hiPush : testHi
useLo = na(testLo) ? loPush : testLo

buf = entryBufPip * pipSize
slBuf = slBufPip * pipSize

longEntry = useHi + buf
shortEntry = useLo - buf

// MANUAL ENTRY SIGNALS (Market entry like proven version)
goLong = testLong
goShort = testShort

slLong = (na(testLo) ? loPush : testLo) - slBuf
slShort = (na(testHi) ? hiPush : testHi) + slBuf

tp1L = longEntry + pipSize * tpMultiplier
tp1S = shortEntry - pipSize * tpMultiplier

// ===== MANUAL TRADING VISUALS =====
plotshape(showEntry and goLong, title="LONG ENTRY", style=shape.labelup, location=location.belowbar,
     color=color.new(color.lime, 0), text="BUY", textcolor=color.black, size=size.small)
plotshape(showEntry and goShort, title="SHORT ENTRY", style=shape.labeldown, location=location.abovebar,
     color=color.new(color.red, 0), text="SELL", textcolor=color.white, size=size.small)

plot(showSLTP and goLong ? slLong : na, title="SL Long", style=plot.style_linebr, color=color.red, linewidth=2)
plot(showSLTP and goShort ? slShort : na, title="SL Short", style=plot.style_linebr, color=color.red, linewidth=2)
plot(showSLTP and goLong ? tp1L : na, title="TP Long", style=plot.style_linebr, color=color.green, linewidth=2)
plot(showSLTP and goShort ? tp1S : na, title="TP Short", style=plot.style_linebr, color=color.green, linewidth=2)

// ===== POSITION SIZING CALCULATION =====
getLotSize(entryPrice, stopPrice) =>
    riskAmount = accountSize * riskPercent / 100
    pipRisk = math.abs(entryPrice - stopPrice) / pipSize
    if pipRisk > 0
        lotSize = riskAmount / (pipRisk * (isPairEURUSD ? 1.0 : 10.0))  // Adjust for EURUSD vs XAUUSD
        math.max(0.01, math.min(lotSize, 10.0))  // Min 0.01, Max 10 lots
    else
        0.01

// ===== PERSISTENT INFO TABLE =====
var table infoTable = table.new(position.top_right, 2, 8, bgcolor=color.white, border_width=1)
if barstate.islast
    // Get latest signal info
    var float lastEntry = na
    var float lastSL = na
    var float lastTP = na
    var string lastDirection = "WAITING"
    var float lastLotSize = 0.01
    
    if goLong
        lastEntry := longEntry
        lastSL := slLong
        lastTP := tp1L
        lastDirection := "LONG"
        lastLotSize := getLotSize(longEntry, slLong)
    else if goShort
        lastEntry := shortEntry
        lastSL := slShort
        lastTP := tp1S
        lastDirection := "SHORT"
        lastLotSize := getLotSize(shortEntry, slShort)
    
    table.cell(infoTable, 0, 0, "PTG MANUAL", text_color=color.white, bgcolor=color.blue, text_size=size.small)
    table.cell(infoTable, 1, 0, lastDirection, text_color=color.white, bgcolor=lastDirection == "LONG" ? color.green : lastDirection == "SHORT" ? color.red : color.gray, text_size=size.small)
    
    table.cell(infoTable, 0, 1, "Pair", text_color=color.black, text_size=size.tiny)
    table.cell(infoTable, 1, 1, pairSelection, text_color=color.blue, text_size=size.tiny)
    
    table.cell(infoTable, 0, 2, "Entry", text_color=color.black, text_size=size.tiny)
    table.cell(infoTable, 1, 2, na(lastEntry) ? "---" : str.tostring(lastEntry, "#.###"), text_color=color.blue, text_size=size.tiny)
    
    table.cell(infoTable, 0, 3, "Stop Loss", text_color=color.black, text_size=size.tiny)
    table.cell(infoTable, 1, 3, na(lastSL) ? "---" : str.tostring(lastSL, "#.###"), text_color=color.red, text_size=size.tiny)
    
    table.cell(infoTable, 0, 4, "Take Profit", text_color=color.black, text_size=size.tiny)
    table.cell(infoTable, 1, 4, na(lastTP) ? "---" : str.tostring(lastTP, "#.###"), text_color=color.green, text_size=size.tiny)
    
    table.cell(infoTable, 0, 5, "Lot Size", text_color=color.black, text_size=size.tiny)
    table.cell(infoTable, 1, 5, str.tostring(lastLotSize, "#.##"), text_color=color.purple, text_size=size.tiny)
    
    table.cell(infoTable, 0, 6, "Account", text_color=color.black, text_size=size.tiny)
    table.cell(infoTable, 1, 6, "$" + str.tostring(accountSize, "#"), text_color=color.blue, text_size=size.tiny)
    
    table.cell(infoTable, 0, 7, "Risk", text_color=color.black, text_size=size.tiny)
    table.cell(infoTable, 1, 7, str.tostring(riskPercent, "#.#") + "%", text_color=color.orange, text_size=size.tiny)

// Reset waitTest
if (goLong or goShort) or (win and (bar_index - iPush) == testBars)
    waitTest := false
    testHi := na
    testLo := na

// ===== ALERTS FOR WEBHOOK/NOTIFICATIONS =====
alertcondition(showAlerts and goLong, title="PTG Long Entry", message="PTG LONG SIGNAL - Entry: {{plot('Entry')}}, SL: {{plot('SL')}}, TP: {{plot('TP')}}")
alertcondition(showAlerts and goShort, title="PTG Short Entry", message="PTG SHORT SIGNAL - Entry: {{plot('Entry')}}, SL: {{plot('SL')}}, TP: {{plot('TP')}}")

// Hidden plots for alert messages
plot(goLong ? longEntry : goShort ? shortEntry : na, title="Entry", display=display.none)
plot(goLong ? slLong : goShort ? slShort : na, title="SL", display=display.none)
plot(goLong ? tp1L : goShort ? tp1S : na, title="TP", display=display.none)
